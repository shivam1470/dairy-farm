#!/bin/bash

# Pre-commit hook to ensure code quality
# This runs automatically before each commit

echo "ğŸ” Running pre-commit checks..."

# Check if pnpm is available
if ! command -v pnpm &> /dev/null; then
    echo "âŒ pnpm not found. Please install pnpm first."
    exit 1
fi

# Run type check
echo "ğŸ“ Type checking..."
if ! pnpm typecheck; then
    echo "âŒ Type check failed. Please fix the errors before committing."
    exit 1
fi

# Run linter
echo "ğŸ§¹ Linting..."
if ! pnpm lint; then
    echo "âŒ Lint check failed. Please fix the errors before committing."
    exit 1
fi

echo "âœ… All pre-commit checks passed!"
exit 0
